{
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "printWidth": 120,

  "overrides": [
    {
      "files": "*.js",
      "options": {
        "parser": "babel",
        "trailingComma": "es5"
      }
    }
  ],
  "proseWrap": "always",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "importSpacing": true
}
